<div class="container">
    <div class="row">
        <div class="col">
            <h1>Welcome to Find the trash page</h1>
            <p>Hello this section is for everybody that has and want the resposibility for receive garbage for reuse, as vegetables, wood, paper, etc.
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a href="findTrash/new">Fill the form</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg">
            <h3>Check the news</h3>
            <% findmytrashes.forEach(r => { %>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card'title"><%= r.name %> <span class="badge bg-secondary"><%= r.items %></span></h5>
                        <h6 class="card-subtitle mb-2 text-muted">Phone: <%= r.phone %>; Address: <%= r.address %></h6>
                        <p class="card-text"><%= r.description %></p>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <div class="col-md">
            <h3>Check the map to find the places nearby</h3>
            <div id="map" style="height: 500px;"></div>
        </div>
    </div>
</div>

<script src="./js/map.js"></script>
